<%= render 'custom/header'%> 


<div class="d-flex justify-content-center">
  <div class="card shadow" style="width: 36rem;">
    <div class="card-header">
      <h2 class="text-center">Edit Article</h2>
    </div>
    <div class="card-body">
      <!--Error Message-->
      <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
          <p class="text-danger"><%= error %></p>
        <% end %>
      <% end %>
      <!-- Form Started Here -->
      <%= form_with model: @article do |f| %>
        <%= f.label :title, "Title :", class:"mt-3" %>
        <%= f.text_field :title ,placeholder: "Enter Title",class:"mb-2 form-control" %>
        <br>
        <%= f.label :body, "Body :", class:"mt-3" %>
        <%= f.text_field :body ,placeholder: "Enter Body",class:"mb-2 form-control" %>
        <br>
        <!-- Radio Button For Status -->
        <div class="form-group">
          <%= f.label "Status :" %>
          <%= f.radio_button :status, "0" %>
          <%= f.label :status, "Public" %>
          <%= f.radio_button :status, "1" %>
          <%= f.label :status, "Draft" %>
        </div>
        <br>
        <%= f.submit "Save Article", class:"btn btn-primary rounded-pill" %>
      <% end %>
    </div>
  </div>
</div>
