<%= render 'custom/header'%> 

<% if @error %>
  <h2 class="text-center"><%= @error %></h2>
<% else %> 

<!-- Article Details Showing -->
<div class="flex-column" style="height:100vh;">
  <!--Error Message-->
  <% if flash[:errors] %>
    <% flash.each do |name,message| %>
      <p class="text-danger"><%= message%></p>
    <% end %>
  <% end %>
  <div class="d-flex">
    <div class="m-5" >
      <div class="card bg-light border-warning shadow">
        <div class="card-body">
          <div class="card-header">
            <h2 class="text-center">Article's Details</h2>
          </div>
          <div>
            <h2> &#10145; Title: <%= @article.title %> </h2>
            <h2> &#10145; Body: <%= @article.body %> </h2>
            <h2> &#10145; Status: <%= @article.status == 0 ? 'Public' : "Draft" %> </h2>
          </div>
          <div class="d-flex">
            <%= button_to "Edit" , edit_article_path, method: :get ,class:"btn-success border-0 rounded-pill shadow p-2 m-2" %>
            <%= button_to "Delete", article_path, method: :delete ,class:"btn-danger border-0 rounded-pill shadow p-2 m-2" %>
            <%= button_to "View all", articles_path,method: :get ,class:"btn-primary border-0 rounded-pill shadow p-2 m-2" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% end %> 