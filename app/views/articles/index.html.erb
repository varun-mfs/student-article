<%= render 'custom/header'%> 
<div class="flex-column">
  <!--Error Message-->
  <% if flash[:errors] %>
    <% flash.each do |name,message| %>
      <p class="text-danger"><%= message%></p>
    <% end %>
  <% end %>
  <!-- Article Table -->
    <div>
      <div class="d-flex justify-content-between align-items-center px-4 mb-2">
        <div>
          <h1 class="m-0">My Articles </h1>
        </div>
        <div>
          <%= button_to "Add New Article", new_article_path, method: :get ,class:"btn btn-primary btn-sm border-0 rounded-pill shadow p-2" %>
        </div>
      </div>
        <div class="row justify-content-center">
          <div class="col m-4 p-0">
          <% @articles.each do |article| %>
            <div class="card mb-3">
              <div class="card-body">
                <h5 class="card-title"><%= article.title %></h5>
                <p class="card-text"><%= article.body %></p>
                <%= link_to "View", article_path(article), method: :get, class:"btn btn-primary" %>
              </div>
            </div>
          <% end %>
          </div>
      </div>
    </div>
</div>